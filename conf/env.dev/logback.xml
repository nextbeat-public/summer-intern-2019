<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss} [%thread] %level %logger - %msg \(%file:%line\)%n</pattern>
    </encoder>
  </appender>
  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
  <logger name="mvc.lifted.Error"                 level="debug" />
  <logger name="mvc.action"                       level="debug" />
  <logger name="ixias"                            level="debug" />
  <logger name="slick.jdbc.JdbcBackend.statement" level="debug" />
</configuration>
